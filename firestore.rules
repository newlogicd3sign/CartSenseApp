rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users collection - users can only access their own document
    match /users/{uid} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }

    // Family members - user can CRUD their own family member profiles
    match /users/{uid}/familyMembers/{memberId} {
      allow read, create, update, delete: if request.auth != null && request.auth.uid == uid;
    }

    // Saved meals - user can CRUD their own saved meals
    match /savedMeals/{uid}/meals/{mealId} {
      allow read, create, update, delete: if request.auth != null && request.auth.uid == uid;
    }

    // User events - user can create and read their own events
    // No update/delete from client (server handles cleanup)
    match /userEvents/{uid}/events/{eventId} {
      allow create, read: if request.auth != null && request.auth.uid == uid;
    }

    // Kroger locations - user can CRUD their own saved stores
    match /krogerLocations/{uid}/locations/{locationId} {
      allow read, create, update, delete: if request.auth != null && request.auth.uid == uid;
    }

    // Meal image cache - publicly readable, server-side write only
    match /mealImageCache/{documentId} {
      allow read: if true;
      allow write: if false; // Only server (admin SDK) can write
    }

    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
